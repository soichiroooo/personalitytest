        </div>
      </div>
      <%# /男性ユーザーの円グラフ %>
      <%# 女性ユーザーの円グラフ %>
      <div>
        <div>
          女性ユーザーの診断結果はこちら
        </div>
        <div class="box">
          <canvas id="myPieChartF" width="200" height="200"></canvas>
        </div>
      </div>
      <%# /女性ユーザーの円グラフ %>
    </div>
    <%# ユーザーの結果表示 %>
    <div class="form-group">
      <% @users.each do |user| %>
        <% if user.test_id %>
          <span>
            <div class='form-text-wrap'><%= link_to user.nickname, user_path(user.id) %></div>
          </span>
        <% end %>
      <% end %>
    </div>
    <%# /ユーザーの結果表示 %>
    <%# 散布図 %>
    <div class="box">
      <canvas id="myScatterChart" width="400" height="400"></canvas>
    </div>
    <%# /散布図 %>
  </div>
<%# /診断結果 %>
<%# 他のユーザーの結果を見るボタン %>
</body>
