<h1>トップページ</h1>
<%= form_with moedel:@test, local: true do |f| %>
<%# <%= render 'shared/error_messages', model: @test %>
  
    <% Question.all.each_with_index do |question,num| %>
    <div class="test_item">
      <div class="question">
      <%= Question.find(num+1).name %>
      </div>
      <% (num*4+1..num*4+4).each do |i| %>
        <div class="answer">
          <div class="item_description">
            <%= Item.find(i).name %>
          </div>
          <div class="radio_button">
          あてはまる
          <%= f.radio_button ":item#{i}", "agree.max" %>
          <%= f.radio_button ":item#{i}", "agree.med" %>
          <%= f.radio_button ":item#{i}", "disagree.med" %>
          <%= f.radio_button ":item#{i}", "disagree.max" %>
          あてはまらない
          </div>
        </div>
      <% end %>
    </div>
    <% end %>

  <div class="test_item">
    <% (33..56).each_slice(2) do |nums| %>
      <div class="answer">
        <div class="item_description">
          A:<%= Item.find(nums.at(0)).name %>
        </div>
        <div class="radio_button">
        <%= f.radio_button ":item#{nums.at(0)}", "agree.max" %>
        <%= f.radio_button ":item#{nums.at(0)}", "agree.med" %>
        <%= f.radio_button ":item#{nums.at(0)}", "neutral" %>
        <%= f.radio_button ":item#{nums.at(0)}", "disagree.med" %>
        <%= f.radio_button ":item#{nums.at(0)}", "disagree.max" %>
        </div>
        <div class="item_description">
          B:<%= Item.find(nums.at(1)).name %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="send_btn">
    <%= f.submit "診断する" %>
  </div>
<% end %>

