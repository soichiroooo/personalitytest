<%= render "shared/header" %>
<body>
<%# 診断結果のパラメーターを持たせる非表示部分 %>
  <div hidden>
    <span id="r_score">
      <%= @test.r_score %>
    </span>
    <span id="y_score">
      <%= @test.y_score %>
    </span>
    <span id="b_score">
      <%= @test.b_score %>
    </span>
    <span id="g_score">
      <%= @test.g_score %>
    </span>
    <span id="color_id">
      <%= @test.color_id %>
    </span>
  </div>
<%# /診断結果のパラメーターを持たせる非表示部分 %>
<%# 診断結果 %>
  <div class="result">
    <div class="result-statement">
      あなたの性格タイプは<span class="color" id = <%= @test.color_id %>><%= Color.find(@test.color_id).name %></span>です
    </div>
    <div class="box">
      <canvas id="myChart" width="400" height="400"></canvas>
    </div>
  </div>
<%# /診断結果 %>
<%# 診断結果説明文 部分テンプレート %>
  <div class="color-explanation">
    <% case @test.color_id %>
      <% when 1 then %>
        <%= render 'shared/red' %>
      <% when 2 then %>
        <%= render 'shared/yellow' %>
      <% when 3 then %>
        <%= render 'shared/blue' %>
      <% when 4 then %>
        <%= render 'shared/green' %>
    <% end %>
  </div>
<%# /診断結果説明文 部分テンプレート %>
<%# 他のユーザーの結果を見るボタン %>
<% if user_signed_in? %>
  <div class="send_btn">
    <%= link_to '他のユーザーの結果を見る', '#' %>
  </div>
<% else %>
  <%= form_with model:@test, url: new_user_registration_path, method: :get, id: 'test-form', local: true do |f| %>
    <div class="send_btn">
      <%= f.submit "会員登録して他のユーザーの結果を見る" %>
    </div>
  <% end %>
<% end %>
<%# 他のユーザーの結果を見るボタン %>
</body>
<%= render "shared/footer" %>

<%# Chart.js %>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    const rScore = document.getElementById("r_score").innerHTML
    const yScore = document.getElementById("y_score").innerHTML
    const bScore = document.getElementById("b_score").innerHTML
    const gScore = document.getElementById("g_score").innerHTML
    const colorId = document.getElementById("color_id").innerHTML
    const CHART_COLORS = {
      red: 'rgb(255, 99, 132, 0.5)',
      orange: 'rgb(255, 159, 64, 0.5)',
      yellow: 'rgb(255, 205, 86, 0.5)',
      green: 'rgb(75, 192, 192, 0.5)',
      blue: 'rgb(54, 162, 235, 0.5)',
      purple: 'rgb(153, 102, 255, 0.5)',
      grey: 'rgb(201, 203, 207, 0.5)'
    };
    if (colorId == 1){
      var CHART_COLOR = CHART_COLORS.red
      document.documentElement.style.setProperty('--my-color', CHART_COLOR);
    } else if (colorId == 2){
      var CHART_COLOR = CHART_COLORS.yellow
      document.documentElement.style.setProperty('--my-color', CHART_COLOR);
    } else if (colorId == 3){
      var CHART_COLOR = CHART_COLORS.blue
      document.documentElement.style.setProperty('--my-color', CHART_COLOR);
    } else if (colorId == 4){
      var CHART_COLOR = CHART_COLORS.green
      document.documentElement.style.setProperty('--my-color', CHART_COLOR);
    } else {
      var CHART_COLOR = CHART_COLORS.grey
      document.documentElement.style.setProperty('--my-color', CHART_COLOR);
    }
    var myChart = new Chart(ctx, {
      type: 'radar',
      data: {
        labels: ['Red', 'Yellow', 'Blue', 'Green'],
        datasets: [
          {
            label: 'あなたの性格診断結果',
            data: [ `${rScore}` , `${yScore}` , `${bScore}` , `${gScore}` ],
            fill: true,
            backgroundColor: CHART_COLOR,
            borderColor: CHART_COLOR,
            pointBackgroundColor: CHART_COLOR,
            pointBorderColor: '#fff',
            pointHoverBackgroundColor: '#fff',
            pointHoverBorderColor: CHART_COLOR
          }
        ]
      },  
      options: {
        responsive: true,
        elements: {
          line: {
            borderWidth: 3
          }
        },
        scale: {
          r: {
            pointLabels: {
              color: 'red'
            },
            min: 0,
            max: 80,
            ticks: {
              font: {
                size: 15,
                family: "'Open Sans', sans-serif",
              }
            }
          }
        }
      }
    });
  </script>
  <%# /Chart.js %>
