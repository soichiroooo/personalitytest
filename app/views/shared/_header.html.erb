<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='header_logo'>
    <%= link_to 'Personality Test', "/" %>
  </div>
  <div class='header_middle'>
    <ul class='lists'>
      <li><%= link_to '性格診断テスト', "/", class: "list" %></li>
      <li><%= link_to '性格タイプ', "#", class: "list" %></li>
    </ul>
  </div>
  <div class='header_right'>
    <ul class='lists'>
      <%if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
      <% else %>
        <li><%= link_to 'ログイン',  new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>